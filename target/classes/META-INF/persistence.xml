<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="desafio">
	<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
	<class>com.sefaz.desafio.entities.Usuario</class>
	<class>com.sefaz.desafio.entities.Telefone</class>
	
	<properties>
		<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/sefaz?useSSL=false&amp;serverTimezone=UTC"/>
		<property name="javax.persistence.jdbc.user" value="hive"/>
		<property name="javax.persistence.jdbc.password" value="hive"/>
		<property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
		<property name="hibernate.default_schema" value="sefaz"/>
		<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect"/>
		<property name="hibernate.show_sql" value="true"/>
		<property name="hibernate.format_sql" value="true"/>
		<property name="hibernate.hbm2ddl.auto" value="update"/>
	</properties>
	</persistence-unit>
</persistence>
